  "errorLens.messageEnabled": true,
  "editor.lineHeight": 0,
  "editor.fontSize": 16,
  "editor.fontLigatures": false,
  "fontshortcuts.defaultFontSize": 14,
  "fontshortcuts.defaultTerminalFontSize": 14,
  "fontshortcuts.step": 1,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
